---

const { pathname } = Astro.url

const normalizedPathName = pathname.length > 1 && pathname.endsWith("/") ? pathname.slice(0, -1) : pathname

const pages = [
  { name: "Inicio", href: "/" },
  { name: "Acerca de", href: "/about" }
].map((page) => ({
  ...page,
  active: normalizedPathName === page.href
}))

---

<nav class="pb-8">
  <div class="flex items-center gap-x-3 justify-center">

    {pages.map(({ name, href, active }) => (
      <a class={`font-bold text-lg text-zinc-800 hover:text-zinc-800 hover:opacity-60 ${active ? 'border-b-2 border-zinc-800' : ''}`} href={href}>{name}</a>
    ))}

  </div>
</nav>
